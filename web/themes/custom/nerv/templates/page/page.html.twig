{#
/**
 * @file
 * Template for the main page.
 */
#}
<div>
  {% embed '@radix/navbar/navbar.twig' with {
    placement: 'sticky-top',
    container: 'fixed',
    color: 'white',
    utility_classes: ['bg-dark'],
  } %}

    {% block branding %}
      {% if page.navbar_branding %}
        {{ page.navbar_branding }}
      {% endif %}
    {% endblock %}

    {% block left %}
      {% if page.navbar_left %}
        <div class="mr-auto">
          {{ page.navbar_left }}
        </div>
      {% endif %}
    {% endblock %}

    {% block right %}
      {% if page.navbar_right %}
        {{ page.navbar_right }}
      {% endif %}
    {% endblock %}
  {% endembed %}

  <main class="background pt-5 pb-5">
    {% if page.header %}
      <header class="page__header mb-3">
        <div class="container">
          {{ page.header }}
        </div>
      </header>
    {% endif %}

    {% if page.content %}
      <div class="page__content contenido">
        <div class="container">
          <div >
            <center >
              <h1>Nerv Drupal Posts</h1>
              <input type="button" onclick="location.href= 'https://proyecto.ddev.local'" value="Home" name=Home"  class="boton btn btn-light">
              <input type="button" onclick="location.href= 'https://proyecto.ddev.local/all-posts'" value="All posts" name=All posts"  class="boton btn btn-light">
            </center >
          </div >


          {{page.content}}
        </div>
      </div>

    {% endif %}
  </main>

  {% if page.footer %}
    <footer class="page__footer footerbottom">
      <div class="container">
        <div class="d-flex justify-content-md-between align-items-md-center">
          {{ page.footer }}
        </div>
      </div>
    </footer>
  {% endif %}
</div>

